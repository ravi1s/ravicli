 *{
    margin:0;
    padding:0;
    box-sizing:border_box;
  }
  .tab-nav{
    height:50px;
    background-color:pink;
    padding:0px 20px;
    position:relative;
    line-height:50px;
    letter-spacing:1px;
    color:white;
  }
  .tab-nav a{
    cursor:pointer;
    padding: 0px 5px;
    display: inline-block;
  }
  .tab-nav a:hover{
    background-color:#ddd;
    color:#000;
  }
  .content {
    padding: 5px 20px;
    display:none;
  
}
  .active{
    background-color:#ddd;
    color:#000;
  }