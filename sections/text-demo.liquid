<div class="image-custom-slider">
   {% for block in section.blocks %}
      <div class="image-custom-run">
         {% if block.settings.myimage %}
           <div class="main-image">
             <img class="image-width" src="{{ block.settings.myimage | img_url: "px" }}"/>
           </div>
         {% endif %}
      </div>
    {% endfor %}
</div>
{% schema %}
  {
    "name": "add text to decore",
    "settings": [
    
      {
        "type" : "image_picker",
        "id" : "myimage",
        "label" : "Select image"
      }
    ],
    "blocks" : [
      {
        "type" : "gallery",
        "name" : "Gallery",
        "settings" : [
          {
            "type" : "image_picker",
        "id" : "myimage",
        "label" : "Select image"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name": "text-new",
        "category": "text LAYOUT"
      }
    ]
    
  }
{% endschema %}
